<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_weather">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:layout_centerInParent="true">

        <Button
                android:id="@+id/detect_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detect_location"
                android:drawablePadding="@dimen/margin_small"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:foreground="?attr/selectableItemBackground"
                android:drawableLeft="@drawable/baseline_location_on_white_18"
                android:background="@color/colorPrimary"
                android:drawableStart="@drawable/baseline_location_on_white_18"
                android:textColor="@android:color/white"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detect_location"
                android:layout_alignLeft="@id/detect_location"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@android:color/white"
                android:layout_alignRight="@id/detect_location"
                android:layout_alignStart="@id/detect_location"
                android:layout_alignEnd="@id/detect_location">

            <ImageView
                    android:id="@+id/weather_find_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_small"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/outline_arrow_right_alt_black_18"
                    tools:ignore="ContentDescription"
                    android:layout_alignParentEnd="true"/>

            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_cityname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_city"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:layout_toLeftOf="@id/weather_find_btn"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/margin_small"
                    android:focusableInTouchMode="true"
                    android:padding="@dimen/margin_small"
                    android:layout_toStartOf="@id/weather_find_btn"
                    android:layout_alignParentStart="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>